---
import { Image } from 'astro:assets';
import BaseLayout from './BaseLayout.astro';
const { frontmatter } = Astro.props;

---
<BaseLayout pageTitle={frontmatter.title} pageDescription={frontmatter.description}>
  <p>{frontmatter.pubDate.toString().slice(0,10)}</p>
  <p><em>{frontmatter.description}</em></p>
  <p>Ã‰crit par : {frontmatter.author}</p>
  <Image src={frontmatter.image.url} width={300} height={200} alt={frontmatter.image.alt} />

  <div class="flex flex-wrap">
    {frontmatter.tags.map((tag: string) => (
      <p ={tag} class="m-1 border border-dotted border-gray-400 rounded-lg px-4 py-2 text-lg bg-[#F8FCFD]">
        <a href={`/tags/${tag}`} class="text-[#00539F]">{tag}</a>
      </p>
    ))}
  </div>

  <slot />
</BaseLayout>