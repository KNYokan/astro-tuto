---
import BaseLayout from '../../layouts/BaseLayout.astro';
const allPosts = Object.values(import.meta.glob('../posts/*.md', { eager: true }));
const tags = [...new Set(allPosts.map((post: any) => post.frontmatter.tags).flat())];
const pageTitle = "Index des Ã©tiquettes";
---
<BaseLayout pageTitle={pageTitle}>
  <div class="tags">
    {tags.map((tag) => (
      <p class="tag m-1 border border-dotted border-gray-400 bg-white rounded-lg px-2 py-2 text-4 max-w-fit" ><a class="text-blue-700 flex flex-wrap "href={`/tags/${tag}`}>{tag}</a></p>
    ))}
  </div>
</BaseLayout>
